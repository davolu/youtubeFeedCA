<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/feedimageURL"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="0dp"

            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/feedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/feednumberOfViews"
            android:layout_toEndOf="@+id/feedprofileImageURL"
            android:layout_toRightOf="@+id/feedprofileImageURL"
            android:text="Loading..."
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/feednumberOfViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/feedName"
            android:layout_alignStart="@+id/feedName"
            android:layout_alignTop="@+id/feedid"
            android:text=""
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <ImageView
            android:id="@+id/feedprofileImageURL"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/feednumberOfViews"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="4dp"
            android:src="@drawable/ic_launcher_foreground" />


        <TextView
            android:id="@+id/feedid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="INR 56990"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:visibility="invisible" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>